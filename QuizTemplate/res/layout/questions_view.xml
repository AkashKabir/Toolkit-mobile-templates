<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@color/BlueBg"
    android:weightSum="1" android:layout_height="wrap_content">
    <TextView android:layout_height="wrap_content" android:text="TextView" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginLeft="5dp" android:layout_margin="10dp" android:layout_width="fill_parent" android:id="@+id/question_no"></TextView>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="1dp" android:orientation="vertical" android:background="#8798AC" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"></LinearLayout>
    <TextView android:layout_height="wrap_content" android:text="TextView" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_margin="10dp" android:layout_width="fill_parent" android:id="@+id/question_label"></TextView>
    <RadioGroup android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/radioGroup1" android:layout_margin="10dp">
        <RadioButton android:id="@+id/radio0" android:text="RadioButton" android:layout_height="wrap_content" android:checked="true" android:layout_width="fill_parent"></RadioButton>
        <RadioButton android:id="@+id/radio1" android:text="RadioButton" android:layout_height="wrap_content" android:layout_width="fill_parent"></RadioButton>
        <RadioButton android:id="@+id/radio2" android:text="RadioButton" android:layout_height="wrap_content" android:layout_width="fill_parent"></RadioButton>
        <RadioButton android:id="@+id/radio3" android:text="RadioButton" android:layout_height="wrap_content" android:layout_width="fill_parent"></RadioButton>
    </RadioGroup>
    <RelativeLayout android:layout_width="fill_parent" android:id="@+id/relativeLayout1" android:layout_height="fill_parent">
        <Button android:layout_width="120dp" android:layout_height="wrap_content" android:text="Submit" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:id="@+id/submit_button"></Button>
        <Button android:layout_width="120dp" android:id="@+id/next_button" android:layout_height="wrap_content" android:text="Next Question" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"></Button>
    </RelativeLayout>
    
</LinearLayout>

