<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    tools:context=".fragment.DetailActivityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_view_height" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player"
            android:layout_marginEnd="@dimen/paddingTop"
            android:layout_marginStart="@dimen/paddingTop"
            android:layout_marginTop="@dimen/splash_text_margin"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="@dimen/paddingTop" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/description"
            android:background="@android:color/transparent"
            android:text="@string/next"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_toStartOf="@+id/next"
            android:background="@android:color/transparent"
            android:text="@string/previous"
            android:textColor="@color/black_secondary_text" />
    </RelativeLayout>
</ScrollView>
